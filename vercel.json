{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"version": 2,
	"builds": [
		{
			"src": "api/**/*.ts",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{
			"src": "/api/webhook",
			"dest": "/api/webhook.ts",
			"methods": ["POST"]
		},
		{
			"src": "/api",
			"dest": "/api/webhook.ts",
			"methods": ["GET"]
		}
	],
	"env": {
		"BOT_TOKEN": "@bot-token",
		"WEBHOOK_SECRET": "@webhook-secret"
	}
}
